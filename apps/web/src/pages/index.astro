---
import BaseLayout from '../layouts/BaseLayout.astro'
import { Button } from '../components/ui/button'
---

<BaseLayout title="Fullstack Starter Kit">
  <main class="container mx-auto py-8 px-4">
    <div class="flex flex-col items-center justify-center min-h-[80vh] gap-6">
      <h1 class="text-4xl font-bold tracking-tight">Fullstack Starter Kit</h1>
      <p class="text-muted-foreground text-lg text-center max-w-md">
        Production-ready monorepo with Bun, Hono, Astro & PostgreSQL
      </p>
      <div class="flex gap-4">
        <Button variant="default" size="lg" asChild>
          <a href="/docs">API Docs</a>
        </Button>
        <Button variant="outline" size="lg" asChild>
          <a href="https://github.com" target="_blank">GitHub</a>
        </Button>
      </div>
    </div>
  </main>
</BaseLayout>
